<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Noticias</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>

<body class="bg-dark text-white">

    <div class="d-flex" style="min-height: 100vh;">
        <%- include('../partials/sidebar') %>

            <main class="flex-fill p-4">
                <h1 class="text-success mb-4 fw-bold">üì∞ Noticias</h1>

                <% if (noticias.length> 0) { %>
                    <div class="row row-cols-1 row-cols-md-2 g-4">
                        <% noticias.forEach(n=> { %>
                            <div class="col">
                                <div class="card bg-secondary text-white h-100">
                                    <% if (n.portada) { %>
                                        <img src="<%= n.portada %>" class="card-img-top" alt="Portada">
                                        <% } %>
                                            <div class="card-body">
                                                <h5 class="card-title">
                                                    <%= n.titulo %>
                                                </h5>
                                                <p class="card-text">
                                                    <small class="text-light">üóìÔ∏è <%= new
                                                            Date(n.fecha).toLocaleDateString('es-MX', { day: 'numeric' ,
                                                            month: 'long' , year: 'numeric' }) %></small>
                                                </p>
                                                <p>
                                                    <%= n.descripcion.slice(0, 150) %>...
                                                </p>
                                                <a href="/noticias/<%= n.id_noticia %>"
                                                    class="btn btn-outline-light">Leer m√°s</a>
                                            </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <% } else { %>
                        <p class="text-warning">No hay noticias disponibles.</p>
                        <% } %>
            </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>